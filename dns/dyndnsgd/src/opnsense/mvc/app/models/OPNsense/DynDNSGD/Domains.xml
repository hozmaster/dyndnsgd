<model>
    <mount>//OPNsense/DynDNSGD/domains</mount>
    <description>
        the OPNsense DynamicDNS mount and model for the domains-view.
    </description>
    <version>0.3.0</version>
    <items>
        <domains>
            <domain type="ArrayField">
                <id type="UniqueIdField">
                    <Required>N</Required>
                </id>
                <enabled type="BooleanField">
                    <default>1</default>
                    <Required>Y</Required>
                </enabled>
                <domain type="TextField">
                    <default></default>
                    <Required>Y</Required>
                </domain>
                <account type="ModelRelationField">
                    <Model>
                        <accounts>
                            <source>OPNsense.DynDNSGD.Accounts</source>
                            <items>accounts.account</items>
                            <display>name</display>
                            <filters>
                                <enabled>/^(?!0).*$/</enabled>
                            </filters>
                        </accounts>
                    </Model>
                    <multiple>N</multiple>
                    <Required>Y</Required>
                </account>
                <interface type="InterfaceField">
                    <Required>Y</Required>
                    <multiple>N</multiple>
                    <default>wan</default>
                    <filters>
                        <enable>/^(?!0).*$/</enable>
                    </filters>
                </interface>
                <cachedip4address type="TextField">
                    <Required>N</Required>
                    <mask>/^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.){3}(?:25[0-4]|2[0-5][0-9]|[01]?[0-9][0-9]?)$/</mask>
                    <ValidationMessage>Cached address must be a valid IPv4 address</ValidationMessage>
                    <default>127.0.0.1</default>
                </cachedip4address>
                <cachedip6address type="TextField">
                    <Required>N</Required>
                    <default>::1/128</default>
                </cachedip6address>
                <description type="TextField">
                    <default></default>
                    <Required>N</Required>
                </description>
                <at_record  type="BooleanField">
                    <default>0</default>
                    <Required>N</Required>
                </at_record>
                <domain_id type="TextField">
                    <Required>N</Required>
                </domain_id>
            </domain>
        </domains>
    </items>
</model>
