<model>
    <mount>//OPNsense/dyndnsgd/accounts</mount>
    <description>
        the OPNsense DynamicDNS mount and model for the accounts-view
    </description>
    <version>0.3.0</version>
    <items>
        <accounts>
            <account type="ArrayField">
                <id type="UniqueIdField">
                    <Required>N</Required>
                </id>
                <enabled type="BooleanField">
                    <default>1</default>
                    <Required>Y</Required>
                </enabled>
                <service_provider type="OptionField">
                    <default>GoDaddy</default>
                    <OptionValues>
                        <auto>GoDaddy</auto>
                    </OptionValues>
                    <Required>Y</Required>
                </service_provider>
                <name type="TextField">
                    <Required>Y</Required>
                </name>
                <description type="TextField">
                    <default></default>
                    <Required>N</Required>
                </description>
                <api_key type="TextField">
                    <default> </default>
                    <Required>Y</Required>
                </api_key>
                <api_secret type="TextField">
                    <default> </default>
                    <Required>Y</Required>
                </api_secret>
                <description type="TextField">
                    <default></default>
                    <Required>N</Required>
                </description>
                <staging type="BooleanField">
                    <default>0</default>
                    <Required>N</Required>
                </staging>
            </account>
        </accounts>
    </items>
</model>
