<form>
    <field>
        <id>domain.enabled</id>
        <label>Enabled</label>
        <type>checkbox</type>
        <help>This will enable or disable the domain.</help>
    </field>
    <field>
        <id>domain.domain</id>
        <label>Domain</label>
        <type>info</type>
        <help>Name of the domain.</help>
    </field>
    <field>
        <id>domain.account</id>
        <label>Account</label>
        <type>dropdown</type>
        <allownew>false</allownew>
        <help>Set correct account for this domain.</help>
    </field>
    <field>
        <id>domain.interface</id>
        <label>Interface to monitor:</label>
        <type>dropdown</type>
        <allownew>false</allownew>
        <help>Set an outgoing interface to listen on.</help>
    </field>
    <field>
        <id>domain.description</id>
        <label>Description</label>
        <type>text</type>
        <default></default>
        <Required>N</Required>
        <help>Set a description.</help>
    </field>
    <field>
        <id>domain.at_record</id>
        <label>Maintain @-record ?</label>
        <type>checkbox</type>
        <default>0</default>
        <Required>N</Required>
        <help>Should this domain maintain the '@'-record by default.</help>
    </field>
</form>
