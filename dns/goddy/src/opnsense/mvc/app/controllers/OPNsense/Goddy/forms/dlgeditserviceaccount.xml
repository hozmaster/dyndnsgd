<form>
    <field>
        <id>account.enabled</id>
        <label>Enabled</label>
        <type>checkbox</type>
        <help>This will enable or disable the account.</help>
    </field>
    <field>
        <id>account.name</id>
        <label>Name</label>
        <type>text</type>
        <help>Set a name of account.</help>
    </field>
    <field>
        <id>account.description</id>
        <label>Description</label>
        <type>text</type>
        <help>Set a description of account.</help>
    </field>
    <field>
        <id>account.service_provider</id>
        <label>Service provider</label>
        <type>dropdown</type>
        <allownew>false</allownew>
        <help>Default is "GoDaddy". Currently any another service providers are not supported.</help>
    </field>
    <field>
        <id>account.api_key</id>
        <label>Key</label>
        <type>text</type>
        <help>Set a key for account.</help>
    </field>
    <field>
        <id>account.api_secret</id>
        <label>Secret key</label>
        <type>password</type>
        <help>Set a secret key for account.</help>
    </field>
    <field>
        <id>account.staging</id>
        <label>Staging</label>
        <type>checkbox</type>
        <help>If checked, this account is consider as a test account.</help>
    </field>
</form>
