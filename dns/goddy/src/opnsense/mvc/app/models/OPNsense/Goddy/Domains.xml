<model>
    <mount>//OPNsense/Goddy/domains</mount>
    <description>
        the OPNsense DynamicDNS mount and model for the domains-view.
    </description>
    <version>0.5.0</version>
    <items>
        <domains>
            <domain type="ArrayField">
                <id type="UniqueIdField">
                    <Required>N</Required>
                </id>
                <enabled type="BooleanField">
                    <default>1</default>
                    <Required>Y</Required>
                </enabled>
                <domain type="TextField">
                    <default></default>
                    <Required>Y</Required>
                </domain>
                <interface type="InterfaceField">
                    <Required>Y</Required>
                    <multiple>N</multiple>
                    <default>wan</default>
                    <filters>
                        <enable>/^(?!0).*$/</enable>
                    </filters>
                </interface>
                <description type="TextField">
                    <default></default>
                    <Required>N</Required>
                </description>
                <at_record  type="BooleanField">
                    <default>0</default>
                    <Required>N</Required>
                </at_record>
                <domain_id type="TextField">
                    <Required>N</Required>
                </domain_id>
            </domain>
        </domains>
    </items>
</model>
